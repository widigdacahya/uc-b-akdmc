<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/bg_color"
    android:gravity="center_horizontal"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculate Your"
        android:textAlignment="center"
        android:layout_marginTop="12dp"
        android:textAllCaps="true"
        android:textSize="20sp"
        android:textColor="@color/dark_orange_text"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="AGE"
        android:textAlignment="center"
        android:paddingHorizontal="24dp"
        android:paddingVertical="12dp"
        android:background="@color/blue_text_bg"
        android:textAllCaps="true"
        android:textSize="20sp"
        android:textColor="@color/blue_text_500"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="In Minutes"
        android:textAlignment="center"
        android:layout_marginTop="8dp"
        android:textAllCaps="true"
        android:textSize="20sp"
        android:textColor="@color/dark_orange_text"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_selecdate_mainUI"
        android:textColor="@color/dark_grey"
        android:text="Select Date"
        android:layout_marginTop="12dp"
        android:backgroundTint="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_selected_date_data_mainUI"
        tools:text="19/9/2021"
        android:textColor="@color/dark_orange_text"
        android:layout_marginTop="12dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_selecteddate_mainUI"
        android:text="Selected Date"
        android:textColor="@color/light_grey"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_result_mainUI"
        tools:text="1440"
        android:textColor="@color/dark_orange_text"
        android:layout_marginTop="20dp"
        android:textSize="28sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_inminute_mainUI"
        android:text="in minutes till date"
        android:textColor="@color/light_grey"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>